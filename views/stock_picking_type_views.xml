<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	
    	<record id="maple_partner_view_region" model="ir.ui.view">
      		<field name="name">maple.partner_view</field>
      		<field name="model">res.partner</field>
      		<field name="priority" eval="1"/>
      		<field name="inherit_id" ref="base.view_partner_form"/>
      		<field name="arch" type="xml">
        		<xpath expr="//group[@string='Locations']" position="after">
                    <group string="Origin validation">
                        <field name="single_origin" attrs="{'required': [('code', '=', 'internal')]}"/>
                    </group>
        		</xpath>
      		</field>
    	</record>
    	
	</data>
</odoo>