<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	
    	<record id="stock_location_maxItem_form" model="ir.ui.view">
      		<field name="name">stock.location.maxItem.form</field>
      		<field name="model">stock.location</field>
      		<field name="inherit_id" ref="stock.view_location_form"/>
      		<field name="arch" type="xml">
        		<xpath expr="//field[@name='usage']" position="before">
          			<field name="maxItem"/>
        		</xpath>
      		</field>
    	</record>

    	<record id="stock_location_maxItem_tree" model="ir.ui.view">
      		<field name="name">stock.location.maxItem.tree</field>
      		<field name="model">stock.location</field>
      		<field name="inherit_id" ref="stock.view_location_tree2"/>
      		<field name="arch" type="xml">
        		<xpath expr="//field[@name='display_name']" position="after">
          			<field name="maxItem"/>
        		</xpath>
      		</field>
    	</record>

	    <record id="stock_location_list" model="ir.ui.view">
			<field name="name">stock_location.list</field>
		    <field name="model">stock.location</field>
		    <field name="arch" type="xml">
                <tree string="List of maple location" toolbar="1" >
	     			<field name="id"/>
	     			<field name="name"/>
    				<field name="qty_purchased"/>	     			
    				<field name="qty_stock"/>	     			
    				<field name="maxItem"/>
		    	</tree>          
		    </field>
	    </record>

	    <record id="stock_location_kanban" model="ir.ui.view">
			<field name="name">stock_location.kanban</field>
		    <field name="model">stock.location</field>
		    <field name="arch" type="xml">
                <kanban default_group_by="">
	     			<field name="name"/>
    				<field name="qty_stock"/>	     			
					<field name="qty_purchased"/>
					<field name="maxItem"/>

                	<templates>
                	   	<t t-name="kanban-box">
	                        <div class="oe_kanban_card">
								<div	class="oe_kanban_content">            	   	
					     			<strong><field name="name"/></strong>
					     			<ul>
					     				<li>
					    					Plan: <field name="qty_purchased"/>
					    				</li>
					    				<li>	     			
					    					Now: <field name="qty_stock"/>	     			
					    				</li>
					    				<li>	     			
					    					Max: <field name="maxItem"/>
					    				</li>
			    					</ul>
			    				</div>
								<div class="oe_kanban_bottom_left">		
			    					<field name="kanban_color"/>
			    				</div>
								<div class="oe_kanban_bottom_right">		
			    					<field name="current_owner"/>
			    				</div>
				    		</div>		    									    		
		    			</t>
		    		</templates>
		    		
		    	</kanban>          
		    </field>
	    </record>


	</data>
</odoo>

